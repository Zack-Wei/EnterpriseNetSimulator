#This firewall aims to control extranet zone's in/out trafic
#


# eth30 to the core SW
ip addr add 192.168.1.31/24 dev eth30
ip link set up dev eth30

# eth2 to the extranet gw
ip addr add 10.0.0.13/30 dev eth2
ip link set up dev eth2

ip route add default via 192.168.1.1
ip route add 192.168.103.0/24 via 10.0.0.14


# ingress iptables rules
## allow core sw
iptables -A INPUT -p all -s 192.168.1.0/24 -j ACCEPT
iptables -A FORWARD -i eth30 -o eth2 -p all -s 192.168.1.0/24 -j ACCEPT
## allow management zone
iptables -A INPUT -p all -s 192.168.254.0/24 -j ACCEPT
iptables -A FORWARD -i eth30 -o eth2 -p all -s 192.168.254.0/24 -j ACCEPT

## services ports: 6000
## allow DMZ access services
iptables -A FORWARD -i eth30 -o eth2 -p tcp -s 192.168.101.0/24 -d 192.168.103.2 --dport 6000 -j ACCEPT
iptables -A FORWARD -i eth30 -o eth2 -p tcp -s 192.168.104.0/24 -d 192.168.103.2 --dport 6000 -j ACCEPT
## allow Enterprise zone access services
iptables -A FORWARD -i eth30 -o eth2 -p tcp -s 192.168.102.0/24 -d 192.168.103.2 --dport 6000 -j ACCEPT
## allow vpn access services
iptables -A FORWARD -i eth30 -o eth2 -p tcp -s 172.16.0.0/21 -d 192.168.103.2 --dport 6000 -j ACCEPT

## At last, deny all
iptables -A FORWARD -i eth30 -o eth2 -p all -j REJECT
iptables -A INPUT -p all -j REJECT
