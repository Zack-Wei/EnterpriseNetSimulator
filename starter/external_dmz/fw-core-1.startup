#This firewall aims to control core zone's in/out trafic
#

# eth30 to the core SW
ip addr add 192.168.0.3/29 dev eth30
ip link set up dev eth30

# eth2 to the other core zones' gw
ip addr add 192.168.1.1/28 dev eth2
ip link set up dev eth2

ip route add default via 192.168.0.1
# enterprise zone route
ip route add 192.168.12.0/24 via 192.168.1.2
# extranet zone route
ip route add 192.168.13.0/28 via 192.168.1.3
# intranet zone route
ip route add 192.168.14.0/27 via 192.168.1.4
# restricted zone route
ip route add 192.168.15.0/28 via 192.168.1.5
# management zone route
ip route add 192.168.254.0/27 via 192.168.1.6

########################################################################################################
# iptables rules
# default drop
iptables -P INPUT DROP
iptables -P OUTPUT DROP
iptables -P FORWARD DROP

# outgress traffic rules
## allow enterprise zone accessing the ex-dmz
iptables -A FORWARD -i eth2 -o eth30 -p all -s 192.168.12.0/24 -d 192.168.11.0/27 --match conntrack --ctstate NEW,ESTABLISHED,RELATED -j ACCEPT
iptables -A FORWARD -i eth30 -o eth2 -p all -s 192.168.11.0/27 -d 192.168.12.0/24 --match conntrack --ctstate ESTABLISHED,RELATED -j ACCEPT
## allow management accessing the ex-dmz
iptables -A FORWARD -i eth2 -o eth30 -p all -s 192.168.254.0/27 -d 192.168.11.0/27 --match conntrack --ctstate NEW,ESTABLISHED,RELATED -j ACCEPT
iptables -A FORWARD -i eth30 -o eth2 -p all -s 192.168.11.0/27 -d 192.168.254.0/27 --match conntrack --ctstate ESTABLISHED,RELATED -j ACCEPT

# core zones' traffic rules
## allow management zone accessing the enterprise
iptables -A FORWARD -i eth2 -o eth2 -p all -s 192.168.254.0/27 -d 192.168.12.0/24 --match conntrack --ctstate NEW,ESTABLISHED,RELATED -j ACCEPT
iptables -A FORWARD -i eth2 -o eth2 -p all -d 192.168.254.0/27 -s 192.168.12.0/24 --match conntrack --ctstate ESTABLISHED,RELATED -j ACCEPT

## allow enterprise zone accessing the extranet zone
iptables -A FORWARD -i eth2 -o eth2 -p all -s 192.168.12.0/24 -d 192.168.13.0/28 --match conntrack --ctstate NEW,ESTABLISHED,RELATED -j ACCEPT
iptables -A FORWARD -i eth2 -o eth2 -p all -d 192.168.12.0/24 -s 192.168.13.0/28 --match conntrack --ctstate ESTABLISHED,RELATED -j ACCEPT
## allow int-dmz zone accessing the extranet zone
iptables -A FORWARD -i eth2 -o eth2 -p all -s 192.168.14.0/27 -d 192.168.13.0/28 --match conntrack --ctstate NEW,ESTABLISHED,RELATED -j ACCEPT
iptables -A FORWARD -i eth2 -o eth2 -p all -d 192.168.14.0/27 -s 192.168.13.0/28 --match conntrack --ctstate ESTABLISHED,RELATED -j ACCEPT
## allow vpn accessing the extranet zone
iptables -A FORWARD -i eth30 -o eth2 -p all -s  172.16.0.0/21 -d 192.168.13.0/28 --match conntrack --ctstate NEW,ESTABLISHED,RELATED -j ACCEPT
iptables -A FORWARD -i eth30 -o eth2 -p all -d  172.16.0.0/21 -s 192.168.13.0/28 --match conntrack --ctstate ESTABLISHED,RELATED -j ACCEPT
## allow management zone accessing the extranet zone
iptables -A FORWARD -i eth2 -o eth2 -p all -s 192.168.254.0/27 -d 192.168.13.0/28 --match conntrack --ctstate NEW,ESTABLISHED,RELATED -j ACCEPT
iptables -A FORWARD -i eth2 -o eth2 -p all -d 192.168.254.0/27 -s 192.168.13.0/28 --match conntrack --ctstate ESTABLISHED,RELATED -j ACCEPT

## allow enterprise zone accessing the int-dmz 
iptables -A FORWARD -i eth2 -o eth2 -p all -s 192.168.12.0/24 -d 192.168.14.0/27 --match conntrack --ctstate NEW,ESTABLISHED,RELATED -j ACCEPT
iptables -A FORWARD -i eth2 -o eth2 -p all -d 192.168.12.0/24 -s 192.168.14.0/27 --match conntrack --ctstate ESTABLISHED,RELATED -j ACCEPT
## allow restricted zone accessing the int-dmz 
iptables -A FORWARD -i eth2 -o eth2 -p all -s 192.168.15.0/28 -d 192.168.14.0/27 --match conntrack --ctstate NEW,ESTABLISHED,RELATED -j ACCEPT
iptables -A FORWARD -i eth2 -o eth2 -p all -d 192.168.15.0/28 -s 192.168.14.0/27 --match conntrack --ctstate ESTABLISHED,RELATED -j ACCEPT
## allow vpn accessing the int-dmz 
iptables -A FORWARD -i eth30 -o eth2 -p all -s  172.16.0.0/21 -d 192.168.14.0/27 --match conntrack --ctstate NEW,ESTABLISHED,RELATED -j ACCEPT
iptables -A FORWARD -i eth30 -o eth2 -p all -d  172.16.0.0/21 -s 192.168.14.0/27 --match conntrack --ctstate ESTABLISHED,RELATED -j ACCEPT
## allow management zone accessing the int-dmz 
iptables -A FORWARD -i eth2 -o eth2 -p all -s 192.168.254.0/27 -d 192.168.14.0/27 --match conntrack --ctstate NEW,ESTABLISHED,RELATED -j ACCEPT
iptables -A FORWARD -i eth2 -o eth2 -p all -d 192.168.254.0/27 -s 192.168.14.0/27 --match conntrack --ctstate ESTABLISHED,RELATED -j ACCEPT

## allow int-dnz accessing the restricted zone
iptables -A FORWARD -i eth2 -o eth2 -p all -s 192.168.14.0/27 -d 192.168.15.0/28 --match conntrack --ctstate NEW,ESTABLISHED,RELATED -j ACCEPT
iptables -A FORWARD -i eth2 -o eth2 -p all -d 192.168.14.0/27 -s 192.168.15.0/28 --match conntrack --ctstate ESTABLISHED,RELATED -j ACCEPT
## allow management zone accessing the restricted zone
iptables -A FORWARD -i eth2 -o eth2 -p all -s 192.168.254.0/27 -d 192.168.15.0/28 --match conntrack --ctstate NEW,ESTABLISHED,RELATED -j ACCEPT
iptables -A FORWARD -i eth2 -o eth2 -p all -d 192.168.254.0/27 -s 192.168.15.0/28 --match conntrack --ctstate ESTABLISHED,RELATED -j ACCEPT

# fw self accessing rules
## allow core sw
iptables -A INPUT -p all -s 192.168.0.1/32 -j ACCEPT
iptables -A OUTPUT -p all -d 192.168.0.1/32 -j ACCEPT
## allow management zone
iptables -A INPUT -p all -s 192.168.254.0/27 -j ACCEPT
iptables -A OUTPUT -p all -d 192.168.254.0/27 --ctstate ESTABLISHED,RELATED -j ACCEPT
